<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
</head>
<body class="bg-zinc-900 flex flex-col min-h-screen p-10">
<section>
    <div class="main w-full bg-zinc-900 px-10 text-white">
        <form action="/create" method="post">
            <input class="block w-full px-5 py-3 bg-zinc-700 rounded-md placeholder-white text-white outline-none" type = "text" placeholder = "Title goes here" name="title">
            <textarea class="block w-full mt-2 px-5 py-3 resize-none rounded-md bg-zinc-700 text-white placeholder-white outline-none" placeholder="Write your task details here" name="details"></textarea>
            <input class="mt-2 px-5 py-2 bg-blue-500 text-white rounded-md font-bold cursor-pointer hover:bg-blue-600" type = "submit" value="Create Task">
        </form>
    </div>
    </section>


    <section>
    <div class="tasks flex gap-5 flex-wrap mt-5 px-10">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800 mt-1">
                    <h2 class="text-white text-2xl tracking-tighter"><%= val %></h2>
                    <div class="flex w-full justify-between items-center">
                        <a class="text-blue-500" href="/files/<%= val %>">Read more.</a>
                        <a class="text-gray-500" href="/edit/<%= val %>">edit</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1 class="text-zinc-600">No tasks yet</h1>
        <% } %>
    </div>
    </section>
</body>
</html>
